<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    android:minHeight="160dp"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView_userProfile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_user" />

        <TextView
            android:id="@+id/textView_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_userProfile"
            android:layout_alignTop="@+id/imageView_userProfile"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView_userProfile"
            android:layout_toLeftOf="@+id/textView_date"
            android:layout_toRightOf="@+id/imageView_userProfile"
            android:layout_toStartOf="@+id/textView_date"
            android:gravity="center_vertical"
            android:textColor="#4a4a4a"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_userProfile"
            android:layout_alignTop="@+id/imageView_userProfile"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toLeftOf="@+id/imageView_hot"
            android:layout_toStartOf="@+id/imageView_hot"
            android:gravity="center_vertical"
            android:textColor="#9b9b9b"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView_hot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView_date"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/fire"
            android:visibility="visible" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView_userName"
            android:layout_marginTop="8dp"
            android:background="#f2f2f2" />

        <TextView
            android:id="@+id/textView_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageButton_like"
            android:layout_below="@+id/divider"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:ems="20"
            android:gravity="top"
            android:lines="2"
            android:maxEms="20"
            android:maxLength="@integer/max_characters_post"
            android:maxLines="2"
            android:minEms="20"
            android:minLines="2"
            android:textColor="#4a4a4a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton_like"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/imageButton_like"
            android:layout_toLeftOf="@+id/imageButton_like"
            android:layout_toStartOf="@+id/imageButton_like"
            android:gravity="center_vertical"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/imageButton_like"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/imageButton_dislike"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/imageButton_dislike"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toLeftOf="@+id/imageButton_dislike"
            android:layout_toStartOf="@+id/imageButton_dislike"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/like_off" />

        <ImageButton
            android:id="@+id/imageButton_dislike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/imageButton_report"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/imageButton_report"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toLeftOf="@+id/imageButton_report"
            android:layout_toStartOf="@+id/imageButton_report"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/dislike_off" />

        <ImageButton
            android:id="@+id/imageButton_report"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toLeftOf="@+id/imageButton_delete"
            android:layout_toStartOf="@+id/imageButton_delete"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/report" />

        <ImageButton
            android:id="@+id/imageButton_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:scaleType="centerInside"
            android:src="@mipmap/delete"
            android:visibility="visible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>